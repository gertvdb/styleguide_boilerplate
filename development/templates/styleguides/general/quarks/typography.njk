	</div>

    <div class="styleguide__highlight-box cm-s-dracula">
		<textarea class="styleguide__code-mirror">
			{{ quote | forceescape }}
		</textarea>
    </div>

	<div class="styleguide__p">&nbsp;</div>


    {% macro mark(text) %}
		<mark>{{ text }}</mark>
    {% endmacro %}

    {% set markText = randomWords | random %}
    {% set mark = mark(markText) %}

    <div class="styleguide__h4">Mark</div>
	<div class="styleguide__sample">
        {{ mark }}
	</div>

    <div class="styleguide__highlight-box cm-s-dracula">
		<textarea class="styleguide__code-mirror">
			{{ mark | forceescape }}
		</textarea>
    </div>

	<div class="styleguide__p">&nbsp;</div>

    {% macro del(text) %}
		<del>{{ text }}</del>

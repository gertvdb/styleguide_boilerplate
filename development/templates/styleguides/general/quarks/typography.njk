{% set randomText = [DATA.CONFIG.TYPO_SENTENCE_U, DATA.CONFIG.TYPO_SENTENCE_V, DATA.CONFIG.TYPO_SENTENCE_W, DATA.CONFIG.TYPO_SENTENCE_Y, DATA.CONFIG.TYPO_SENTENCE_X, DATA.CONFIG.TYPO_SENTENCE_Z] %}
{% set randomWords = [DATA.CONFIG.TYPO_WORDS_U, DATA.CONFIG.TYPO_WORDS_V, DATA.CONFIG.TYPO_WORDS_W, DATA.CONFIG.TYPO_WORDS_Y, DATA.CONFIG.TYPO_WORDS_X, DATA.CONFIG.TYPO_WORDS_Z] %}



{% macro styleguide(DATA) %}
	<div class="styleguide__h2 styleguide__title js-scroll-nav__sub-title">Typography</div>
	<div class="styleguide__small">/sass/base/_quarks/_typography.scss</div>
	<div class="styleguide__hr"></div>

	<div class="styleguide__h3 styleguide__sub-title">Font stack</div>
	<div class="styleguide__p">
		Below are links to download the fonts that are used throughout this styleguide.
		We use a limited amount of fonts to make sure the brand stands out.
	</div>
	<div>
		<ul>
            {% for font  in DATA.FONT_FAMILY %}
				<li><a href="/fonts/{{ font }}.zip" download>{{ font }}</a></li>
            {% endfor %}
		</ul>
	</div>

	<div class="styleguide__h3 styleguide__sub-title">Headings</div>
	<div class="styleguide__p">
		The list of different heading sizes used throughout the project. Make sure you provide a nice vertical rhythm.
	</div>

    <div class="styleguide__h4">Heading 1</div>
    {% macro h1(text) %}
		<h1>{{ text }}</h1>
    {% endmacro %}

    {% set h1Text = randomText | random %}
    {% set h1 = h1(h1Text) %}

	<div class="styleguide__sample">
		{{ h1 }}
	</div>

    <div class="styleguide__highlight-box cm-s-dracula">
		<textarea class="styleguide__code-mirror">
			{{ h1 | forceescape }}
		</textarea>
    </div>

	<div class="styleguide__p">&nbsp;</div>

    <div class="styleguide__h4">Heading 2</div>
    {% macro h2(text) %}
		<h2>{{ text }}</h2>
    {% endmacro %}

    {% set h2Text = randomText | random %}
    {% set h2 = h2(h2Text) %}

	<div class="styleguide__sample">
        {{ h2 }}
	</div>

    <div class="styleguide__highlight-box cm-s-dracula">
		<textarea class="styleguide__code-mirror">
			{{ h2 | forceescape }}
		</textarea>
    </div>

	<div class="styleguide__p">&nbsp;</div>

    <div class="styleguide__h4">Heading 3</div>
    {% macro h3(text) %}
		<h3>{{ text }}</h3>
    {% endmacro %}

    {% set h3Text = randomText | random %}
    {% set h3 = h3(h3Text) %}

	<div class="styleguide__sample">
        {{ h3 }}
	</div>

    <div class="styleguide__highlight-box cm-s-dracula">
		<textarea class="styleguide__code-mirror">
			{{ h3 | forceescape }}
		</textarea>
    </div>

	<div class="styleguide__p">&nbsp;</div>

    <div class="styleguide__h4">Heading 4</div>
    {% macro h4(text) %}
		<h4>{{ text }}</h4>
    {% endmacro %}

    {% set h4Text = randomText | random %}
    {% set h4 = h4(h4Text) %}

	<div class="styleguide__sample">
        {{ h4 }}
	</div>

    <div class="styleguide__highlight-box cm-s-dracula">
		<textarea class="styleguide__code-mirror">
			{{ h4 | forceescape }}
		</textarea>
    </div>

	<div class="styleguide__p">&nbsp;</div>

    <div class="styleguide__h4">Heading 5</div>
    {% macro h5(text) %}
		<h5>{{ text }}</h5>
    {% endmacro %}

    {% set h5Text = randomText | random %}
    {% set h5 = h5(h5Text) %}

	<div class="styleguide__sample">
        {{ h5 }}
	</div>

    <div class="styleguide__highlight-box cm-s-dracula">
		<textarea class="styleguide__code-mirror">
			{{ h5 | forceescape }}
		</textarea>
    </div>

	<div class="styleguide__p">&nbsp;</div>

    <div class="styleguide__h4">Heading 6</div>
    {% macro h6(text) %}
		<h6>{{ text }}</h6>
    {% endmacro %}

    {% set h6Text = randomText | random %}
    {% set h6 = h6(h6Text) %}

	<div class="styleguide__sample">
        {{ h6 }}
	</div>

    <div class="styleguide__highlight-box cm-s-dracula">
		<textarea class="styleguide__code-mirror">
			{{ h6 | forceescape }}
		</textarea>
    </div>


	<div class="styleguide__h3 styleguide__sub-title">HTML Elements</div>
	<div class="styleguide__p">
		The list of all different html element used throughout the project. Provide a nice base styling for all element that fit the design.
	</div>

    {% macro p(text) %}
		<p>{{ text }}</p>
    {% endmacro %}

    {% set pText = randomText | random %}
    {% set p = p(pText)%}

    <div class="styleguide__h4">Paragraph</div>
    <div class="styleguide__sample">
        {{ p }}
	</div>

    <div class="styleguide__highlight-box cm-s-dracula">
		<textarea class="styleguide__code-mirror">
			{{ p | forceescape }}
		</textarea>
    </div>

	<div class="styleguide__p">&nbsp;</div>

    {% macro small(text) %}
		<small>{{ text }}</small>
    {% endmacro %}

    {% set smallText = randomText | random %}
    {% set small = small(smallText) %}

    <div class="styleguide__h4">Small</div>
    <div class="styleguide__sample">
        {{ small }}
	</div>

    <div class="styleguide__highlight-box cm-s-dracula">
		<textarea class="styleguide__code-mirror">
			{{ small | forceescape }}
		</textarea>
    </div>

	<div class="styleguide__p">&nbsp;</div>

    <div class="styleguide__h4">Quote/Cite</div>
    {% macro blockQuote(text, author) %}
		<blockquote>
			{{ text }}
			<cite>{{ author }}</cite>
		</blockquote>
	{% endmacro %}

    {% set blockQuoteText = randomText | random %}
    {% set blockQuoteAuthor = randomWords | random %}

    {% set blockQuote = blockQuote(blockQuoteText, blockQuoteAuthor) %}

	<div class="styleguide__sample">
        {{ blockQuote }}
	</div>

    <div class="styleguide__highlight-box cm-s-dracula">
		<textarea class="styleguide__code-mirror">
			{{ blockQuote | forceescape }}
		</textarea>
    </div>

	<div class="styleguide__p">&nbsp;</div>

    {% macro a(text, href) %}
		<a href="{{ href }}" title="{{ text }}">{{ text }}</a>
    {% endmacro %}

    {% set aText = randomWords | random %}
    {% set a = a(aText, '#') %}

    <div class="styleguide__h4">Link</div>
    <div class="styleguide__sample">
        {{ a }}
	</div>

    <div class="styleguide__highlight-box cm-s-dracula">
		<textarea class="styleguide__code-mirror">

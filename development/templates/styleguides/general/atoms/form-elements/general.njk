{% macro styleguide() %}
	<div class="styleguide__h3 styleguide__sub-title">Textfield</div>
	<div class="styleguide__p">
		A form element building block for all textfield variations.
	</div>

    {% set textField = textField('Text input', 'Enter your text here', 'Tell the user what kind of input is expected, add a clickthrough as needed') %}
	<div class="styleguide__sample">
        {{ textField }}
	</div>

	<div class="styleguide__highlight-box">
		<div class="styleguide__highlight-box__header">Code Sample</div>
		<textarea class="styleguide__code-mirror">
			{{ textField | forceescape }}
		</textarea>
	</div>

	<div class="styleguide__p">&nbsp;</div>


    {% set emailField = emailField('Email', 'info@your-domein.com', 'Don\'t worry, we won\'t spam you.') %}
	<div class="styleguide__sample">
        {{ emailField }}
	</div>

	<div class="styleguide__highlight-box">
		<div class="styleguide__highlight-box__header">Code Sample</div>
		<textarea class="styleguide__code-mirror">
			{{ emailField | trim }}
		</textarea>
	</div>

	<div class="styleguide__p">&nbsp;</div>


    {% set passwordField = passwordField('Password', 'Enter your password here', 'Passwords should be 6 characters or more. Be tricky!') %}
	<div class="styleguide__sample">
        {{ passwordField }}
	</div>

	<div class="styleguide__highlight-box">
		<div class="styleguide__highlight-box__header">Code Sample</div>
		<textarea class="styleguide__code-mirror">
			{{ passwordField | trim }}
		</textarea>
	</div>

	<div class="styleguide__p">&nbsp;</div>


    {% set numberField = numberField('Amount', '3', 'Select the number of products you want to order.') %}
	<div class="styleguide__sample">
        {{ numberField }}
	</div>
	<div class="styleguide__highlight-box">
		<div class="styleguide__highlight-box__header">Code Sample</div>
		<textarea class="styleguide__code-mirror">
			{{ numberField | trim }}
		</textarea>
	</div>

	<div class="styleguide__p">&nbsp;</div>


    {% set phoneField = phoneField('Phone number', '+32 ××× ×× ×× ××', 'Don\'t worry, we only contact you when it\'s absolutely necessary.') %}
	<div class="styleguide__sample">
        {{ phoneField }}
	</div>
	<div class="styleguide__highlight-box">
		<div class="styleguide__highlight-box__header">Code Sample</div>
		<textarea class="styleguide__code-mirror">
			{{ phoneField | trim }}
		</textarea>
	</div>

	<div class="styleguide__p">&nbsp;</div>


    {% set websiteField = websiteField('Website', 'https://', 'Tell us a little bit more about yourself.') %}
	<div class="styleguide__sample">
        {{ websiteField }}
	</div>
	<div class="styleguide__highlight-box">
		<div class="styleguide__highlight-box__header">Code Sample</div>
		<textarea class="styleguide__code-mirror">
			{{ websiteField | trim }}
		</textarea>
	</div>

	<div class="styleguide__p">&nbsp;</div>


    {% set searchField = searchField('Search', 'Type to search', 'Can\'t find what you\'re looking for? Try our frequently asked questions.') %}
	<div class="styleguide__sample">
        {{ searchField }}
	</div>
	<div class="styleguide__highlight-box">
		<div class="styleguide__highlight-box__header">Code Sample</div>
		<textarea class="styleguide__code-mirror">
			{{ searchField | trim }}
		</textarea>
	</div>
{% endmacro %}

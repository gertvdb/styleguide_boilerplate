{# ------------------------#}
{# -------Code block-------#}
{# ------------------------#}
{% macro textareaField(label, placeholder, description) %}
	<div class="a-input">
		<label for="input-textarea">{{ label }}</label>
		<div class="a-input__field-holder">
			<textarea name="input-textarea" id="input-textarea" cols="30" rows="5" placeholder="{{ placeholder }}"></textarea>
		</div>
		<small>{{ description }}</small>
	</div>
{% endmacro %}

{# ----------------------------#}
{# ------Styleguide block------#}
{# ----------------------------#}
{% macro styleguide() %}
	<div class="styleguide__h3 styleguide__sub-title">Textarea</div>
	<div class="styleguide__p">
		A form element building block for textareas.
	</div>


    {% set textareaField = textareaField('Textarea', 'Type something...', 'Feedback, suggestions, ideas, ... we would love to hear from you!') %}
	<div class="styleguide__sample">
        {{ textareaField }}
	</div>



	<div class="styleguide__highlight-box">
		<div class="styleguide__highlight-box__header">Code Sample</div>
		<textarea class="styleguide__code-mirror">
            {{ textareaField | forceescape }}
		</textarea>
	</div>
{% endmacro %}
